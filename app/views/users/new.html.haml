%h1 Sign up

= form_for @user do |f|
  - if @user.errors.any?
    .error_messages
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    %br
    = f.text_field :email

  .field
    = f.label :password
    %br
    = f.password_field :password

  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation

  .submit
    = f.submit 'Sign In'