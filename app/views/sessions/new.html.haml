%h1 Log in

.session
  = form_tag sessions_path, html: { id: 'session' } do
    .email-field
      = label_tag :email
      %br
      = text_field_tag :email, params[:email]

    .password-field
      = label_tag :password
      %br
      = password_field_tag :password

    .login-submit
      = submit_tag 'Log In'